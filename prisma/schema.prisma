// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  STAFF
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  refresh_token_expires_in Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  bio           String? @db.Text
  age           Int?
  username      String?   @unique
  passwordHash  String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  role          Role      @default(USER)
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Carousel models:
model Carousel {
  id               String    @id @default(uuid())
  name             String?   @unique
  image            String?   @default("/default.jpg")
  created          DateTime  @default(now())
}

// Supplier Models: 
model Supplier {
  id               String    @id @default(uuid())
  name             String?   @unique
  logo_image       String?   @default("/default.jpg")
  marketing_image  String?   @default("/default.jpg")
  description      String?
  social_facebook  String?   
  social_twitter   String?   
  social_instagram String?   
  social_youtube   String?   
  social_linkedin  String?   
  social_website   String?   
  created          DateTime  @default(now())
  machines         Machine[] 
  spare_parts      SpareParts[]
  videos           Video[]
}

model Video {
  id             String    @id @default(uuid())
  supplierId     String   
  supplier       Supplier  @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  web_url        String?
  title          String?   
  description    String?
  video_id       String?   
  thumbnail_url  String?
  created        DateTime  @default(now())
}


model Machine {
  id            String   @id @default(uuid())
  supplierId    String
  supplier      Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  name          String?  @unique
  machine_image String?  @default("/default.jpg")
  description   String?
  machine_link  String?  
  created       DateTime @default(now())
  products      Product[]
}

model Product {
  id         String   @id @default(uuid())
  machineId  String   
  machine    Machine  @relation(fields: [machineId], references: [id], onDelete: Cascade)
  name       String?  @unique
  product_image String?  @default("/default.jpg")
  description String?
  product_link String?
}

model SpareParts {
  id         String   @id @default(uuid())
  supplierId String
  supplier   Supplier @relation(fields: [supplierId], references: [id] , onDelete: Cascade)
  name       String?
  parts_image String?  @default("/default.jpg")
  description String?
  spare_parts_link String?
}

// About models:
model Employee {
  id             String   @id @default(uuid())
  name           String?  
  email          String?  
  phone          String?
  role           String?  
  bio            String?  
  profile_image  String?  @default("/default.jpg")
  created        DateTime @default(now())
}

model Timeline {
  id      String   @id @default(uuid())
  title   String?  
  date    String?  
  body    String?  
  created DateTime @default(now())
}

model Terms {
  id      String   @id @default(uuid())
  title   String?  
  body    String?  
  created DateTime @default(now())
}

model Privacy {
  id      String   @id @default(uuid())
  title   String?  
  body    String?  
  created DateTime @default(now())
}

// Blog models:
model Blog {
  id          String   @id @default(uuid())
  title       String?  
  date        String?  
  main_image  String?  @default("/default.jpg")
  subheading  String?  
  body        String?  
  created     DateTime @default(now())
}

model Exhibition {
  id      String   @id @default(uuid())
  title   String?  
  date    String?  
  location String?  
  info    String?  
  created DateTime @default(now())
}

// Payment models:

model PaymentProduct {
  id           String  @id @default(uuid())
  name         String? 
  price        Int     @default(0)
  image        String? @default("/default.jpg")
}

// Registration models: 
model WarrantyClaim {
  id              String          @id @default(uuid())
  dealer          String? 
  dealer_contact  String? 
  owner_name      String? 
  machine_model   String? 
  serial_number   String? 
  install_date    String? 
  failure_date    String? 
  repair_date     String? 
  failure_details String? 
  repair_details  String? 
  labour_hours    String? 
  completed_by    String? 
  created         DateTime       @default(now())
  parts           PartsRequired[]
}

model PartsRequired {
  id              String         @id @default(uuid())
  warrantyId      String
  warranty        WarrantyClaim  @relation(fields: [warrantyId], references: [id], onDelete: Cascade)
  part_number     String? 
  quantity_needed String?        @default("1")
  invoice_number  String? 
  description     String? 
}

model MachineRegistration {
  id                String    @id @default(uuid())
  dealer_name       String? 
  dealer_address    String? 
  owner_name        String? 
  owner_address     String? 
  machine_model     String? 
  serial_number     String? 
  install_date      String? 
  invoice_number    String? 
  complete_supply   Boolean   @default(false)
  pdi_complete      Boolean   @default(false)
  pto_correct       Boolean   @default(false)
  machine_test_run  Boolean   @default(false)
  safety_induction  Boolean   @default(false)
  operator_handbook Boolean   @default(false)
  date              String? 
  completed_by      String? 
  created           DateTime  @default(now())
}


